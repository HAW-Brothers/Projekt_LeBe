<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#00c5c5c5</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">#c5c5c5</item>

    </style>

    <!-- Das Style damit es keine blaue Headline in der App gibt - CG -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- GUI-Styles start here -CG -->
    <!-- Style für Login Activity -->
    <!-- Style für Login Textfelder -->
    <style name="LoginTextfield">
        <item name="android:textColor">#A6A6A6</item>
        <item name="android:textColorHint">#A6A6A6</item>
        <item name="android:background">@drawable/edittext_main</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:dividerPadding">8dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <!-- Style für Login Button -->
    <style name="LoginButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style für Login Text -->
    <style name="LoginText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style für UserView -->
    <!-- Style für UserView Textfelder -->
    <style name="EditText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#6E6E6E</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/edittext_user_view_main</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <!-- Style für UserView TextViews -->
    <style name="UserViewText">
        <item name="android:paddingTop">10dp</item>
    </style>


    <!-- Style für Home -->
    <!-- Style für Login Button -->
    <style name="Bib_Popup_Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_main</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>
