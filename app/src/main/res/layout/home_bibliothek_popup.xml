<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:background="@drawable/popup_bib_main"
    >


    <LinearLayout
        android:layout_width="@dimen/popup_bib_width"
        android:layout_height="@dimen/popup_bib_height"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/popup_bib_textView"
            android:text="Plug-In"
            android:textColor="@color/colorTextWhite"
            android:textStyle="bold"
            android:textSize="8pt"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zu Favorit hinzufÃ¼gen?"
            android:textColor="@color/colorTextWhite"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/standard_marging"
            />

    <LinearLayout

        android:gravity="center"
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         >

        <Button
            style="@style/Bib_Popup_Button"
            android:id="@+id/popup_bib_cancel"
            android:text="CANCEL"
            android:layout_marginRight="@dimen/standard_marging"/>

        <Button
            style="@style/Bib_Popup_Button"
            android:id="@+id/popup_bib_ok"
            android:text="OK" />



    </LinearLayout>

    </LinearLayout>


</RelativeLayout>